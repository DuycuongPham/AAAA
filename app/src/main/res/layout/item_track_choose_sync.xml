<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/color_white"
    >

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/item_track_image_height"
        android:layout_height="@dimen/item_track_image_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/relative_track_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/checkBox"
        android:layout_toStartOf="@id/checkBox"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_item_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sub_text_title_size"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/item_track_image_padding"
            />

        <TextView
            android:id="@+id/text_item_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_track"
            android:maxLines="1"
            />
    </RelativeLayout>

</RelativeLayout>
