<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    <RelativeLayout
        android:id="@+id/layoutDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_delete"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgDelete"
            android:layout_centerVertical="true"
            android:textColor="#838383"
            android:textSize="@dimen/sp_16"
            android:text="@string/title_delete_playlist"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/imgRename"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:textSize="@dimen/sp_16"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgRename"
            android:textSize="@dimen/sp_16"
            android:textColor="#838383"
            android:text="@string/title_rename_playlist"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </RelativeLayout>

</LinearLayout>