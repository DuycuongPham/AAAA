<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.sync.SyncActivity"
    android:background="@color/color_white"
    >
    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/msg_checking_sync"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/syncingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/color_white"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/msg_syncing"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/layoutSync"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layoutNotOnLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/textSong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_sync"
                    android:text="@string/title_song_not_on_device"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/color_white"
                    android:background="@color/color_black"
                    android:onClick="onClickTextNotOnLocal"
                    android:gravity="center_vertical"
                    />

                <LinearLayout
                    android:id="@+id/layoutChooseAllTracksNotOnLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_choose_all"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_black"
                        />
                    <CheckBox
                        android:id="@+id/checkBoxTracksNotOnLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_5"
                        android:onClick="onClickCheckboxTracksNotOnLocal"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerTracksNotOnLocal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textSong"
                    android:padding="@dimen/dp_5"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNotOnCloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_sync"
                    android:text="@string/title_song_not_on_cloud"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/color_white"
                    android:background="@color/color_black"
                    android:onClick="onClickTextNotOnCloud"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/layoutChooseAllTracksNotOnCloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_choose_all"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_black"
                        />
                    <CheckBox
                        android:id="@+id/checkBoxTracksNotOnCloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_5"
                        android:onClick="onClickCheckboxTracksNotOnCloud"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerTracksNotOnCloud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textSong"
                    android:padding="@dimen/dp_5"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

