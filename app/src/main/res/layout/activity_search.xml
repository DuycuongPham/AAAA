<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SearchViewStyle"
    >
    <RelativeLayout
        android:id="@+id/layoutInternet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_sub_controller"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_internet_not_available"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/textRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_retry"
                android:textColor="@color/color_green"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include layout="@layout/sub_controller"/>


</RelativeLayout>