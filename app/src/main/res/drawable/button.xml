<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Set màu nền-->
            <solid
                android:color="#ffffff" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="#ffffff" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" >
            </padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners
                android:radius="0dp" >
            </corners>

        </shape>

    </item>

    <item>

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Set màu nền-->
            <solid
                android:color="#f0f1f1f1" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="#f0f1f1f1" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" >
            </padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners
                android:radius="0dp" >
            </corners>

        </shape>

    </item>

</selector>