<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pham.duycuong.soundcloud">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".data.model.MusicService"/>

        <activity
            android:name=".screen.category.CategoryActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".screen.play.PlayActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".screen.download.DownloadActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".screen.playlist.PlaylistActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".screen.search.SearchActivity"
            android:launchMode="singleTask"/>

        <receiver android:name=".screen.MyBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>

        <activity android:name=".screen.playlistdetail.PlayListDetailActivity">
        </activity>
        <activity android:name=".screen.songlist.SongListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.choose_track.ChooseTrackActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".screen.sync.SyncActivity">
        </activity>
        <activity android:name=".screen.sync.SigninActivity">
        </activity>
        <activity android:name=".screen.songlist.FilterSongActivity">
        </activity>
    </application>

</manifest>